  <style>
    :root {
      --neon: #bf00ff;
      --glow: #d966ff;
      --mid: #7b00cc;
      --dark-bg: #050508;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }

    html { scroll-behavior: smooth; }

    body {
      background-color: var(--dark-bg);
      font-family: 'Syne', sans-serif;
      color: #e0e0f0;
      overflow-x: hidden;
    }

    /* Background radial gradient */
    body::before {
      content: '';
      position: fixed;
      inset: 0;
      background:
        radial-gradient(ellipse 80% 60% at 20% 10%, rgba(127,0,204,0.18) 0%, transparent 60%),
        radial-gradient(ellipse 60% 50% at 80% 80%, rgba(191,0,255,0.12) 0%, transparent 55%),
        radial-gradient(ellipse 40% 40% at 50% 50%, rgba(61,0,102,0.10) 0%, transparent 70%);
      pointer-events: none;
      z-index: 0;
    }

    /* Noise texture overlay */
    body::after {
      content: '';
      position: fixed;
      inset: 0;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
      pointer-events: none;
      z-index: 0;
      opacity: 0.4;
    }

    section, nav, footer { position: relative; z-index: 1; }

    /* GLASS MORPHISM */
    .glass {
      background: rgba(255,255,255,0.035);
      backdrop-filter: blur(20px) saturate(180%);
      -webkit-backdrop-filter: blur(20px) saturate(180%);
      border: 1px solid rgba(191,0,255,0.2);
      box-shadow: 0 8px 32px rgba(191,0,255,0.08), inset 0 1px 0 rgba(255,255,255,0.07);
    }

    .glass-card {
      background: rgba(255,255,255,0.03);
      backdrop-filter: blur(24px) saturate(200%);
      -webkit-backdrop-filter: blur(24px) saturate(200%);
      border: 1px solid rgba(191,0,255,0.25);
      box-shadow:
        0 4px 24px rgba(191,0,255,0.1),
        0 0 0 0.5px rgba(255,255,255,0.05) inset,
        inset 0 1px 0 rgba(255,255,255,0.08);
      transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .glass-card:hover {
      border-color: rgba(191,0,255,0.6);
      box-shadow:
        0 8px 48px rgba(191,0,255,0.25),
        0 0 20px rgba(191,0,255,0.15),
        inset 0 1px 0 rgba(255,255,255,0.12);
      transform: translateY(-6px) scale(1.02);
    }

    /* NEON TEXT */
    .neon-text {
      color: #fff;
      text-shadow:
        0 0 10px var(--neon),
        0 0 30px var(--neon),
        0 0 60px var(--mid),
        0 0 100px var(--mid);
    }

    .neon-purple { color: var(--glow); }

    /* LIQUID GLASS BUTTON */
    .btn-liquid {
      position: relative;
      overflow: hidden;
      background: rgba(191,0,255,0.12);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(191,0,255,0.5);
      box-shadow:
        0 0 20px rgba(191,0,255,0.3),
        0 4px 20px rgba(0,0,0,0.4),
        inset 0 1px 0 rgba(255,255,255,0.15),
        inset 0 -1px 0 rgba(191,0,255,0.2);
      transition: all 0.35s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .btn-liquid::before {
      content: '';
      position: absolute;
      top: 0; left: -100%;
      width: 100%; height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
      transition: left 0.5s ease;
    }

    .btn-liquid:hover::before { left: 100%; }

    .btn-liquid:hover {
      background: rgba(191,0,255,0.25);
      border-color: rgba(217,102,255,0.8);
      box-shadow:
        0 0 40px rgba(191,0,255,0.5),
        0 8px 32px rgba(0,0,0,0.4),
        inset 0 1px 0 rgba(255,255,255,0.2);
      transform: translateY(-2px);
    }

    /* NAVBAR */
    .navbar {
      background: rgba(5,5,8,0.7);
      backdrop-filter: blur(30px) saturate(200%);
      -webkit-backdrop-filter: blur(30px) saturate(200%);
      border-bottom: 1px solid rgba(191,0,255,0.2);
    }

    /* HERO */
    .hero-headline {
      font-family: 'Bebas Neue', sans-serif;
      font-weight: 400;
      letter-spacing: 0.06em;
      line-height: 1.0;
    }

    /* PROGRESS BARS */
    .progress-track {
      background: rgba(255,255,255,0.05);
      border: 1px solid rgba(191,0,255,0.15);
      border-radius: 99px;
      overflow: hidden;
    }

    .progress-fill {
      height: 100%;
      border-radius: 99px;
      background: linear-gradient(90deg, #7b00cc, #bf00ff, #d966ff);
      box-shadow: 0 0 12px rgba(191,0,255,0.6), 0 0 4px rgba(217,102,255,0.8);
      position: relative;
      animation: fillBar 2s cubic-bezier(0.23, 1, 0.32, 1) forwards;
    }

    .progress-fill::after {
      content: '';
      position: absolute;
      right: 0; top: 0;
      width: 20px; height: 100%;
      background: rgba(255,255,255,0.3);
      border-radius: 99px;
      filter: blur(4px);
    }

    @keyframes fillBar {
      from { width: 0; }
    }

    /* PRICING HIGHLIGHT */
    .card-pro {
      border-color: rgba(191,0,255,0.7) !important;
      box-shadow:
        0 0 30px rgba(191,0,255,0.3),
        0 8px 48px rgba(191,0,255,0.15),
        inset 0 1px 0 rgba(255,255,255,0.1) !important;
    }

    /* SCROLLBAR */
    ::-webkit-scrollbar { width: 4px; }
    ::-webkit-scrollbar-track { background: #050508; }
    ::-webkit-scrollbar-thumb { background: var(--mid); border-radius: 4px; }
    ::-webkit-scrollbar-thumb:hover { background: var(--neon); }

    /* FLOAT ANIMATION */
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-12px); }
    }

    .float { animation: float 4s ease-in-out infinite; }

    /* PULSE GLOW */
    @keyframes pulseGlow {
      0%, 100% { box-shadow: 0 0 20px rgba(191,0,255,0.4); }
      50% { box-shadow: 0 0 40px rgba(191,0,255,0.8), 0 0 80px rgba(191,0,255,0.3); }
    }

    .pulse-glow { animation: pulseGlow 2.5s ease-in-out infinite; }

    /* SCANLINE HERO */
    .scanline {
      position: absolute;
      inset: 0;
      background: repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(191,0,255,0.015) 2px,
        rgba(191,0,255,0.015) 4px
      );
      pointer-events: none;
    }

    /* GRID BADGE */
    .badge {
      font-family: 'Space Mono', monospace;
      font-size: 0.65rem;
      letter-spacing: 0.1em;
      padding: 2px 8px;
      border-radius: 3px;
      background: rgba(191,0,255,0.15);
      border: 1px solid rgba(191,0,255,0.4);
      color: var(--glow);
    }

    /* GLOW DOT */
    .glow-dot {
      width: 8px; height: 8px;
      border-radius: 50%;
      background: var(--neon);
      box-shadow: 0 0 6px var(--neon), 0 0 12px var(--neon);
      animation: pulseGlow 1.5s ease-in-out infinite;
    }

    /* SECTION TITLE */
    .section-tag {
      font-family: 'DM Mono', monospace;
      font-size: 0.72rem;
      letter-spacing: 0.35em;
      text-transform: uppercase;
      color: var(--glow);
      opacity: 0.75;
    }

    /* SHIMMER */
    @keyframes shimmer {
      0% { background-position: -200% 0; }
      100% { background-position: 200% 0; }
    }

    .shimmer-text {
      background: linear-gradient(90deg, #fff 0%, var(--glow) 40%, #fff 60%, var(--glow) 100%);
      background-size: 200% auto;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: shimmer 4s linear infinite;
    }

    /* MOBILE NAV */
    #mobile-menu { display: none; }
    #mobile-menu.open { display: flex; }

    /* PORTFOLIO PLACEHOLDER IMAGES */
    .portfolio-img {
      width: 100%; aspect-ratio: 16/9;
      display: flex; align-items: center; justify-content: center;
      font-family: 'Orbitron', sans-serif;
      font-size: 0.75rem;
      letter-spacing: 0.2em;
      font-weight: 700;
    }
  </style>
</head>
